{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DataProviderConfig",
  "type": "object",
  "properties": {
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "A unique identifier for this source"
          },
          "dataSource": {
            "type": "string",
            "description": "The DataSourceId for the data source",
            "enum": [
              "random",
              "uniswap_v2"
            ]
          },
          "config": {
            "description": "An arbitrary configuration object for the configured dataSource",
            "type": "object",
            "oneOf": [
              {
                "if": {
                  "properties": {
                    "dataSource": {
                      "const": "random"
                    }
                  }
                },
                "then": {
                  "title": "RandomConfig",
                  "type": "object",
                  "properties": {
                    "updateFrequency": {
                      "type": "string",
                      "description": "Frequency at which updates should occur.",
                      "pattern": "^[0-9]+(ns|us|\u00b5s|ms|s|m|h)$"
                    },
                    "minValue": {
                      "type": "number",
                      "description": "The minimum possible generated value."
                    },
                    "maxValue": {
                      "type": "number",
                      "description": "The maximum possible generated value."
                    }
                  },
                  "required": [
                    "updateFrequency",
                    "minValue",
                    "maxValue"
                  ],
                  "additionalProperties": false
                }
              },
              {
                "if": {
                  "properties": {
                    "dataSource": {
                      "const": "uniswap_v2"
                    }
                  }
                },
                "then": {
                  "type": "object",
                  "properties": {
                    "updateFrequency": {
                      "type": "string",
                      "description": "Frequency of updates.",
                      "pattern": "^[0-9]+(ns|us|\u00b5s|ms|s|m|h)$"
                    },
                    "httpProviderUrl": {
                      "type": "string",
                      "description": "HTTP provider URL."
                    },
                    "providerApiKeyEnvVar": {
                      "type": "string",
                      "description": "Environment variable name for the provider API key."
                    },
                    "contractAddress": {
                      "type": "string",
                      "description": "Contract address.",
                      "pattern": "^0x[0-9a-fA-F]+$"
                    },
                    "baseTokenIndex": {
                      "type": "integer",
                      "format": "int8",
                      "description": "Index of the base token."
                    },
                    "quoteTokenIndex": {
                      "type": "integer",
                      "format": "int8",
                      "description": "Index of the quote token."
                    },
                    "baseTokenDecimals": {
                      "type": "integer",
                      "format": "int8",
                      "description": "Decimals for the base token."
                    },
                    "quoteTokenDecimals": {
                      "type": "integer",
                      "format": "int8",
                      "description": "Decimals for the quote token."
                    }
                  },
                  "required": [
                    "updateFrequency",
                    "httpProviderUrl",
                    "contractAddress",
                    "baseTokenIndex",
                    "quoteTokenIndex"
                  ],
                  "additionalProperties": false
                }
              }
            ]
          }
        },
        "required": [
          "id",
          "dataSource",
          "config"
        ]
      },
      "description": "A list of source configurations",
      "minItems": 1
    }
  },
  "required": [
    "sources"
  ],
  "additionalProperties": false
}